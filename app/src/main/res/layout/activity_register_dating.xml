<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_dating">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dating_username"
            android:hint="Username"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/dating_firstname"
            android:hint="Firstname"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/dating_lastname"
            android:hint="Lastname"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/dating_contact"
            android:hint="Phone number"
            android:inputType="phone"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        //first see if this works
        <EditText
            android:id="@+id/dating_birth"
            android:hint="Date of birth"
            android:inputType="date"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/dating_location"
            android:hint="Address"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/dating_password"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2sp"
            android:focusable="true"
            android:gravity = "center"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content">
            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:id="@+id/confirm_password"
                android:textSize="20dp"/>

        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <Button
                android:layout_width="300dp"
                android:text="Register"
                android:id="@+id/register"

                android:layout_marginTop="20sp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/btn_register"
                android:textAlignment="center"
                android:layout_height="wrap_content" />



        </LinearLayout>
    </LinearLayout>


</RelativeLayout>